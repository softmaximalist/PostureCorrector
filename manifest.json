{
    "manifest_version": 3,
    "name": "PostureCorrector: AI Posture Assistance App",
    "version": "1.0.0",
    "description": "Uses real-time webcam footage to accurately detect bad posture and warn user.",
    "permissions": ["tabs", "scripting", "storage", "notifications"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/bird16.png",
      "32": "icons/bird32.png",
      "48": "icons/bird48.png",
      "128": "icons/bird128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/bird16.png",
        "32": "icons/bird32.png",
        "48": "icons/bird48.png",
        "128": "icons/bird128.png"
      }
    },
    "sandbox": {
      "pages": ["sandbox.html", "sandbox.js"]
    }
  }
  